<% content_for :content do %>
  <div class="columns">
    <div class="column is-3 is-offset-1">
      <aside class="menu">
        <p class="menu-label">Messages</p>
        <ul class="menu-list">
          <li><%= link_to "Inbox", inbox_messages_path, class: "#{'is-active' if current_page?(inbox_messages_path)}" %></li>
          <li><%= link_to "Compose", new_message_path, class: "#{'is-active' if current_page?(new_message_path)}" %></li> 
          <li><%= link_to "Sent", sent_messages_path, class: "#{'is-active' if current_page?(sent_messages_path)}" %></li>
        </ul>
      </aside>
    </div>  
    <div class="column is-6 is-narrow">
      <%= yield %>
    </div>
  </div>
<% end %>
</div>
<%= render file: "layouts/application" %>

