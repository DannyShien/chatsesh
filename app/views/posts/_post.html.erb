<div class="card post" id="<%= dom_id post %>">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <div class="image is-32x32">
          <%= image_tag "http://lorempixel.com/128/128/people/" %>
        </div>
      </div>
      <div class="media-content">
        <p class="is-title"><%= post.poster.name %></p>
        <small><%= time_ago_in_words post.updated_at %> ago</small>
      </div>
    </div>
    <div class="content">
      <p><%= post.body %></p>
    </div>
  </div>
  <div class="card-footer">
    <div class="level">
      <div class="level-left">
        <%= link_to icon("thumbs-up", "Like"), toggle_like_path(post_id: post.id), 
        class: "js-like-button button is-white #{'is-liked' if current_user && current_user.liking?(post)}", 
        method: 'post', remote: true %>
      </div>
    </div>
  </div>
  <div class="card-footer likes sentence">
    <span class="fa-stack fa-sm">
      <i class="fa fa-circle-thin fa-stack-2x"></i>
      <i class="fa fa-thumbs-up fa-stack-1x"></i>
    </span>
    <%= post.likes.map{|e| e.user_name}.to_sentence  %>
  </div>
    <% post.comments.each do |comment|%>
      <div class="comment card-content">
        <div class="media">
          <div class="media-left"> 
            <p class="image is-32x32">
              <%= image_tag "http://lorempixel.com/128/128/people/" %>
            </p>
          </div>
          <div class="media-content>"><%= comment.body %>
            <div class="level">
              <div class="level-left">
                <a class="level-item" rel="nofollow" data-method="post" href="/likes?">Like</a>
                <small><%= time_ago_in_words post.updated_at %> ago</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <%= form_for(current_user.comments.build(post: post)) do |f| %>  
    <%= f.hidden_field :post_id %>        
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <div class="image is-32x32">
            <%= image_tag "http://lorempixel.com/128/128/people/" %>
          </div>
        </div>
        <div class="media-content">          
          <%= f.text_field :body, class: "input", placeholder: "Write a comment..." %>
        </div>
      </div>          
    </div>
  <% end %>  
</div>