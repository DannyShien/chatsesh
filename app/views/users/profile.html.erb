<div class="container">
  <div class="columns">
    <div class="column is-10 is-offset-1">
      <section class="hero is-medium is-light is-bold">
        <div class="hero-body">
          <div class="media">
            <div class="media-left">
              <%= image_tag(current_user.image_url_or_default, size: "100x100", style: "margin-bottom: -170px") %>
            </div>
          </div>
          <div class="media-content">   
            <p class="title"><%= @user.name %></p>
          </div>
        </div>
        <div class="hero-foot">
          <nav class="tabs is-centered">
            <div class="container">
              <ul>
                <li class="is-active"><a>TimeFeed</a></li>
                <li><a>About</a></li>
                <li><a>Friends</a></li>
              </ul>
            </div>
          </nav>
        </div>
      </section>
    </din>
  </div>
</div>
<div class="container">
  <div class="columns">
    <div class="column is-3 is-offset-1">
      Info/photo..
    </div>
     <div class="column is-6 is-offset-1">
      <%= form_for(current_user.posts.build) do |f| %>
    <div class="card-post" style="margin-bottom: 20px">
      <div class="card-content">
        <article class="media">
          <figure class="media-left">
            <p class="image is-32x32">
              <%= image_tag current_user.image_url_or_default %>
            </p>
          </figure>
          <div class="media-content">             
            <div class="field">
              <%= f.hidden_field :wall_user_id, value: current_user.id %> 
              <%= f.text_area :body, class: "textarea", placeholder: "What's on your mind, #{current_user.name}?" %>
            </div>
            <nav class="level">
              <div class="level-left">
                <div class="level-item"></div>
              </div>  
              <div class="level-right">
                <button class="level-item button is-warning">
                  <p><%= icon("send", "Send") %></p>
                </button>
              </div>
            </nav>  
          </div>
        </article>
      </div>
    </div>
  <% end %>
    </div>
  </div>
</div>





